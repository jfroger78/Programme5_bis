{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/build",
            "problemMatcher": []
        },
        {
            "label": "Rebuild Project",
            "type": "shell",
            "command": "mkdir -p ${workspaceFolder}/build && cd ${workspaceFolder}/build && cmake -DCMAKE_BUILD_TYPE=Debug .. && make",
            "problemMatcher": [],
            "dependsOn": "Clean Build"
        }
    ]
}